<div class="col-xs-12 row">

  <% abstract_contents = render "catalog/record/mods_abstract_contents" %>
  <% unless abstract_contents.strip.blank? %>
    <div class="section">
      <div class="section-heading">
        <h2>Abstract/Contents</h2>
      </div>
      <div class="section-body">
        <dl>
          <%= abstract_contents%>
        </dl>
      </div>
    </div>
  <% end %>

  <% contributors = render "catalog/record/mods_contributors" %>
  <% if contributors.present? %>
    <div class="section">
      <div class="section-heading">
        <h2>Contributors</h2>
      </div>
      <div class="section-body">
        <%= contributors %>
      </div>
    </div>
  <% end %>

  <% subjects = render "catalog/record/mods_subjects" %>
  <% if subjects.present? %>
    <div class="section">
      <div class="section-heading">
        <h2>Subjects</h2>
      </div>
      <div class="section-body">
        <%= subjects %>
      </div>
    </div>
  <% end %>

  <% bibliography = render "catalog/record/mods_bibliographic" %>
  <% if bibliography.present? %>
    <div class="section">
      <div class="section-heading">
        <h2>Bibliographic information</h2>
      </div>
      <div class="section-body">
        <dl>
          <%= bibliography %>
        </dl>
      </div>
    </div>
  <% end %>

  <% access = render "catalog/record/mods_access" %>
  <% if access.present? %>
    <div class="section">
      <div class="section-heading">
        <h2>Access conditions</h2>
      </div>
      <div class="section-body">
        <dl>
          <%= access %>
        </dl>
      </div>
    </div>
  <% end %>

</div>
