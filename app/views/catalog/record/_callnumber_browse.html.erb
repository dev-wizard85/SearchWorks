<%
  document ||= @document
  num_callnumbers_to_show = 3
%>

<div class="section record-browse-nearby container-fluid" id="<%= t('record_side_nav.browse_nearby.id') %>" data-side-nav-class="<%= t('record_side_nav.browse_nearby.id') %>">
  <h2><span class="sul-icon sul-icon-books-3"></span> Browse related items</h2>
  <div class="row">
    <div class="col-md-9 col-sm-12">
      Start at call number:
      <% document.holdings.browsable_callnumbers[0..(num_callnumbers_to_show - 1)].each_with_index do |callnumber, index| %>
        <span class="callnumber">
          <%= link_to_callnumber_browse(document, callnumber, index) %>
        </span>
      <% end %>
    </div>
    <div class="view-full-page col-md-3 col-sm-12">
      <%= link_to "View full page", "#" %>
    </div>
  </div>

  <% document.holdings.browsable_callnumbers.each_with_index do |callnumber, index| %>
    <div id="callnumber-<%=index%>" class="embed-callnumber-browse-container" aria-expanded="true" style="<%= 'display:none;' unless index == 0 %>">
      <div class="embedded-items"><div class="gallery"></div></div>
      <a class="left embed-browse-control" href="#" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
      </a>
      <a class="right embed-browse-control" href="#" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
      </a>
    </div>
  <% end %>
</div>
