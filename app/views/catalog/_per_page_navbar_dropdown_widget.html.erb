<% if show_sort_and_per_page? and !blacklight_config.per_page.blank? %>
  <li class="dropdown-header">Per page</li>
  <%- per_page_options_for_select.each do |(label, count)| %>
    <li>
      <%= link_to(is_current_per_page?(count, label), url_for(params_for_search(:per_page => count))) %>
    </li>
  <%- end -%>
<% end %>
