<% callnumber = location.items.first %>

<% if callnumber and callnumber.stackmapable? %>
  <%= link_to t('blacklight.tools.find_it').html_safe, stackmap_path(title: (document['title_display'] || '').html_safe, id: document.id, callnumber: callnumber.callnumber, library: callnumber.library, location: callnumber.home_location), { :data => { :ajax_modal => "trigger" }, :class => "stackmap-find-it" } %>
<% end %>
