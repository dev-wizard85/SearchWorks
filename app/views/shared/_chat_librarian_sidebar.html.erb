<div class='panel panel-default'>
  <div class='panel-body'>
    <div data-library-h3lp data-jid="ic@chat.libraryh3lp.com">
      <span class="image-icon image-icon-message-away media-object pull-left"></span>
      <div class="media-body">
        <%= link_to "Chat with a librarian", "https://library.stanford.edu/ask" %>
        <p>
          Chat reference is available during normal <%= link_to 'Information Center', 'https://library.stanford.edu/libraries/green/information-center' %> hours.
          <span data-hours-route='<%= "#{hour_path('IC')}" %>'>
            <span class='location-hours-today'></span>
          </span>
        </p>
      </div>
    </div>
  </div>
</div>
