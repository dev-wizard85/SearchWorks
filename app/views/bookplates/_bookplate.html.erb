<div class='bookplate col-sm-12 col-md-6'>
  <div class='media'>
    <div class='media-left'>
      <%= image_tag(bookplate.thumbnail_url, alt: bookplate.text) %>
    </div>
    <div class='media-body'>
      <%= link_to_bookplate_search(bookplate, class: 'media-heading') %>
      <% if Settings.BOOKPLATES_EXHIBIT_URL.present? %>
        <p>
          <%= link_to('Digital Bookplates Exhibit', Settings.BOOKPLATES_EXHIBIT_URL) %>
          <i class='external-link-icon'></i>
        </p>
      <% end %>
    </div>
  </div>
</div>
